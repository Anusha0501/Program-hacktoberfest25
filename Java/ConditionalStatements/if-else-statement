public class IfElseStatement {
    public static void main(String[] args) {
        int number = -10; // Declare an integer variable and assign it a value of -10.

        // Check if the number is non-negative (greater than or equal to 0).
        if (number >= 0) {
            // If the condition is true, print this message.
            System.out.println("The number is non-negative.");
        } else {
            // If the condition is false, print this message.
            System.out.println("The number is negative.");
        }
    }
}
