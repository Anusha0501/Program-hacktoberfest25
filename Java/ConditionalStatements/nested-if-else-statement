public class NestedIfStatement {
    public static void main(String[] args) {
        int number = 20; // Declare an integer variable and assign it a value of 20.

        // First, check if the number is positive.
        if (number > 0) {
            // If it is positive, check if it is even.
            if (number % 2 == 0) {
                // If the number is even, print this message.
                System.out.println("The number is positive and even.");
            } else {
                // If the number is not even (i.e., it is odd), print this message.
                System.out.println("The number is positive and odd.");
            }
        } else {
            // If the number is not positive, print this message.
            System.out.println("The number is not positive.");
        }
    }
}
