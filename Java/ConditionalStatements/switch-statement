public class SwitchStatement {
    public static void main(String[] args) {
        int day = 3; // Declare an integer variable for the day of the week.

        // Use switch statement to determine the day name based on its number.
        switch (day) {
            case 1:
                // If day is 1, print "Monday".
                System.out.println("Monday");
                break; // Exit the switch statement after executing this case.
            case 2:
                // If day is 2, print "Tuesday".
                System.out.println("Tuesday");
                break;
            case 3:
                // If day is 3, print "Wednesday".
                System.out.println("Wednesday");
                break;
            case 4:
                // If day is 4, print "Thursday".
                System.out.println("Thursday");
                break;
            case 5:
                // If day is 5, print "Friday".
                System.out.println("Friday");
                break;
            case 6:
                // If day is 6, print "Saturday".
                System.out.println("Saturday");
                break;
            case 7:
                // If day is 7, print "Sunday".
                System.out.println("Sunday");
                break;
            default:
                // If day is not between 1 and 7, print an error message.
                System.out.println("Invalid day number.");
        }
    }
}
